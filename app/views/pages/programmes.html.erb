<div class="container">
  <h1>Programmes</h1>
  
    <% @posts.each do |p| %>
      <div class="row">
        <h2><%= p.title %></h2>
        <div class="col-md-6">
        	<% if p.video_url.present? %>
        		<p><%= raw(p.video_url) %></p>
        	<% elsif p.image_url.present? %>
        		<img src="<%= p.image_url %>">
        	<% else %>
        		<img src="#">
        	<% end %>
        </div>
        <div class="col-md-6">
       		<ul>
       			<% if p.iphone.present? %>
       				<a href="<%= p.iphone %>" class="btn btn-yellow">iPhone</a>
       			<% end %>
       			<% if p.ipad.present? %>
       				<a href="<%= p.ipad %>" class="btn btn-yellow">iPad</a>
       			<% end %>
       			<% if p.android.present? %>
       				<a href="<%= p.android %>" class="btn btn-yellow">Android</a>
       			<% end %>
       			<% if p.android.present? %>
       				<a href="<%= p.android %>" class="btn btn-yellow">Android</a>
       			<% end %>
       			<% if p.mac.present? %>
       				<a href="<%= p.mac %>" class="btn btn-yellow">Mac</a>
       			<% end %>
       			<% if p.pc.present? %>
       				<a href="<%= p.pc %>" class="btn btn-yellow">PC</a>
       			<% end %>
       		</ul>
        </div>
        <div class="clear"></div>
        <p><%= raw(p.body_text) %></p>
      </div>
      <hr>
    <% end %>
</div>