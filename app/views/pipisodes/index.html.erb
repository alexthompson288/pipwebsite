<div class="container">
  <h1>Pipisodes</h1>
  <div class="row">
    <% @pipisodes.each do |p| %>
      <div class="col-md-4">
        <a href="/pipisodes/<%= p.id %>"><h2><%= p.pipisode_title %></h2></a>
        <a href="/pipisodes/<%= p.id %>"><img class="pipisode-thumbnail" src="https://s3-eu-west-1.amazonaws.com/pipisodes/<%= p.image_filename %>.jpg"></a>
      </div>
    <% end %>
  </div>
  <br />
  <br />
  <br />
  <br />
</div>
