<div class="container">
  <h1>Listing posts</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Url</th>
        <th>Video url</th>
        <th>Image url</th>
        <th>Body text</th>
        <th>Type</th>
        <th>Subject reading</th>
        <th>Subject maths</th>
        <th>Subject world</th>
        <th>Subject english</th>
        <th>Priority level</th>
        <th>Lilac</th>
        <th>Pink</th>
        <th>Red</th>
        <th>Yellow</th>
        <th>Blue</th>
        <th>Green</th>
        <th>Orange</th>
        <th>Linklabel</th>
        <th>Publishable</th>
        <th>Order number</th>
        <th>Links</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.url %></td>
          <td><%= post.video_url %></td>
          <td><%= post.image_url %></td>
          <td><%= post.body_text %></td>
          <td><%= post.posttype %></td>
          <td><%= post.subject_reading %></td>
          <td><%= post.subject_maths %></td>
          <td><%= post.subject_world %></td>
          <td><%= post.subject_english %></td>
          <td><%= post.priority_level %></td>
          <td><%= post.lilac %></td>
          <td><%= post.pink %></td>
          <td><%= post.red %></td>
          <td><%= post.yellow %></td>
          <td><%= post.blue %></td>
          <td><%= post.green %></td>
          <td><%= post.orange %></td>
          <td><%= post.linklabel %></td>
          <td><%= post.publishable %></td>
          <td><%= post.order_number %></td>
          <td><%= post.iphone %>, <%= post.ipad %>, <%= post.android %>, <%= post.mac %>, <%= post.pc %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post', new_post_path %>
</div>
