
  <%= form_for(@stage) do |f| %>
    <% if @stage.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@stage.errors.count, "error") %> prohibited this stage from being saved:</h2>

        <ul>
        <% @stage.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :number %><br>
      <%= f.number_field :number %>
    </div>
    <div class="field">
      <%= f.label :age %><br>
      <%= f.text_field :age %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <p class="large-font">Choose the games associated with this stage</p>
    
    </div>
    <div class="clear"></div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
  
